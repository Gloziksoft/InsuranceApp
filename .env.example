# ==================================================
# DOCKER COMPOSE
# ==================================================
COMPOSE_PROJECT_NAME=insuranceapp

# ==================================================
# SPRING
# ==================================================
# LOCAL:
#   SPRING_PROFILES_ACTIVE=local
#   SERVER_PORT=8083
#
# PROD:
#   SPRING_PROFILES_ACTIVE=prod
#   SERVER_PORT=8080
#
SPRING_PROFILES_ACTIVE=local
SERVER_PORT=8083
SPRING_APPLICATION_NAME=InsuranceApp

# ==================================================
# DATABASE (MariaDB)
# ==================================================
